<center>
    <h2>Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
            <div class="field">
                <%= f.label :name %><br />
                    <%= f.text_field :name, autofocus: true %>
            </div>

            <div class="field">
                <%= f.label :email %><br />
                    <%= f.email_field :email %>
            </div>

            <div class="field">
                <%= f.label :password %>
                    <%= f.password_field :password, autocomplete: "off" %>

                        <% if @minimum_password_length %>
                            <em>(<%= @minimum_password_length %> characters minimum)</em>
                            <% end %><br />
            </div>

            <div class="field">
                <%= f.label :password_confirmation %><br />
                    <%= f.password_field :password_confirmation, autocomplete: "off" %>
            </div>

            <div class="field">
                <%= f.label :dob %><br />
                    <%= f.date_select :dob ,start_year: 1900, end_year: 2000 %>

            </div>

            <div class="field">
                <%= f.label :gender %><br />
                    <%= f.select :gender, options_for_select([["Male","male"],["Female","female"]]), {}, {required: 'true'} %>

            </div>

  
            <div class="field">
                <%= f.label :userimage %><br />
                    <%= f.file_field :userimage %>
            </div>

            <div class="field">
                <%= f.label :position %><br />
                    <%= f.select :status, options_for_select([["Student","student"],["Teacher","teacher"]]), {}, {required: 'true'} %>
            </div>

            <div class="actions">
                <%= f.submit "Sign up" %>
            </div>
            <% end %>

</center>
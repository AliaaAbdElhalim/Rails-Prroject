<p id="notice">
    <%= notice %>
</p>

<h1>Listing Lectures</h1>

<table>
    <thead>
        <tr>
            <th>Content</th>

            <th>Course</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @lectures.each do |lecture| %>
            <tr>
                <td>
                    <%= raw lecture.title %>
                </td>

                <td>
                    <%= lecture.try(:Course).try(:title) %>
                </td>
                <td>
                    <%= link_to 'Show', lecture %>
                </td>
                <% if user_signed_in? %>
                    <% if current_user.status === "teacher" %>

                        <td>
                            <%= link_to 'Edit', edit_lecture_path(lecture) %>
                        </td>
                        <td>
                            <%= link_to 'Destroy', lecture, method: :delete, data: { confirm: 'Are you sure?' } %>
                        </td>
                        <% end -%>
                            <% end -%>
            </tr>
            <% end %>
    </tbody>
</table>

<br>
<% if user_signed_in? %>
    <% if current_user.status === "teacher" %>
        <%= link_to 'New Lecture', new_lecture_path %>
            <% end -%>
                <% end -%>
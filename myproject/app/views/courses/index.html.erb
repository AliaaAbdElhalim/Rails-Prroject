<div class="container">
<h1>Listing Courses</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>creator</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.title %></td>
        <td><%= course.user.name %></td>
        <td><%= link_to 'Show', course %></td>       
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
  <% if current_user.status==="teacher" %>
<%= link_to 'New Course', new_course_path %>
<%end%>
<%end%>

</div>